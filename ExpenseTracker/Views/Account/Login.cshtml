@model ExpenseTracker.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <span class="emoji-icon piggy">üê∑</span>
            <h1>Login</h1>
            <span class="emoji-icon money">üí∞</span>
        </div>

        <form asp-action="Login" method="post" class="login-form">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control login-input" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control login-input" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="text-danger mb-3">
                @Html.ValidationSummary(true)
            </div>

            <button type="submit" class="btn btn-login w-100">Sign in</button>
        </form>

        <div class="login-footer">
            <span class="footer-text">Don't have an account?</span>
            <a asp-action="Register" class="btn btn-register">Create account</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
