@model ExpenseTracker.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <span class="emoji-icon piggy">ğŸ·</span>
            <h1>Register</h1>
            <span class="emoji-icon money">ğŸ’°</span>
        </div>

        <form asp-action="Register" method="post" class="login-form">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control login-input" placeholder="Choose a username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control login-input" placeholder="Create a strong password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login w-100">Create account</button>
        </form>

        <div class="login-footer">
            <span class="footer-text">Already have an account?</span>
            <a asp-action="Login" class="btn btn-register">Sign in</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
