@model List<ExpenseTracker.ViewModels.SuperAdminUserViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="bi bi-people-fill"></i> Manage Users</h1>
            <p class="text-muted">View and manage all system users</p>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> No users found in the system.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th><i class="bi bi-person"></i> Username</th>
                        <th><i class="bi bi-calendar"></i> Registration Date</th>
                        <th><i class="bi bi-receipt"></i> Total Expenses</th>
                        <th><i class="bi bi-currency-dollar"></i> Total Amount</th>
                        <th><i class="bi bi-toggle-on"></i> Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <strong>@user.Username</strong>
                            </td>
                            <td>
                                <small class="text-muted">@user.RegistrationDate.ToString("MMM dd, yyyy")</small>
                            </td>
                            <td>
                                @user.TotalExpenses
                            </td>
                            <td>
                                <span class="badge bg-success">NPR @user.TotalAmount.ToString("N2")</span>
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Inactive</span>
                                }
                            </td>
                            <td class="text-center">
                                <form method="post" asp-action="DeleteUserSuper" style="display: inline;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Styles {
    <style>
        h1 {
            color: #2c3e50;
            font-weight: 600;
            border-bottom: 3px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 10px;
        }

        .table {
            margin-bottom: 0;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .badge {
            padding: 6px 12px;
            font-weight: 500;
        }

        .btn-group-sm {
            gap: 5px;
        }
    </style>
}
