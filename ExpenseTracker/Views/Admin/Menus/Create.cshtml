@model ExpenseTracker.Models.Menu
@{
    ViewData["Title"] = "Create Menu";
}

<div class="container mt-5">
    <h1>Create New Menu</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="CreateMenu" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="E.g., Dashboard" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Url" class="form-label"></label>
                    <input asp-for="Url" class="form-control" placeholder="E.g., /Dashboard/Index" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Create Menu
                    </button>
                    <a asp-action="Menus" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
