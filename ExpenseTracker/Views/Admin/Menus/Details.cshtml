@model ExpenseTracker.Models.Menu
@{
    ViewData["Title"] = "Menu Details";
}

<div class="container mt-5">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1><i class="bi bi-menu-button-wide"></i> Menu Details</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Basic Menu Info -->
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Menu Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <p class="text-muted mb-1">Menu ID</p>
                            <h6 class="mb-0">@Model.Id</h6>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted mb-1">Title</p>
                            <h6 class="mb-0">@Model.Title</h6>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted mb-1">Assigned Users</p>
                            <h6 class="mb-0">
                                <span class="badge bg-info">@Model.UserMenus.Count</span>
                            </h6>
                        </div>
                    </div>
                    <div class="mb-0">
                        <p class="text-muted mb-1">URL</p>
                        <code class="d-block p-2 bg-light rounded">@Model.Url</code>
                    </div>
                </div>
            </div>

            <!-- Users with Access -->
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Users with Access to This Menu</h5>
                </div>
                <div class="card-body">
                    @if (Model.UserMenus.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Username</th>
                                        <th>Roles</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var userMenu in Model.UserMenus.OrderBy(um => um.User?.Username))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@(userMenu.User?.Username ?? "Unknown")</strong>
                                            </td>
                                            <td>
                                                @if (userMenu.User?.UserRoles.Any() == true)
                                                {
                                                    @foreach (var userRole in userMenu.User.UserRoles)
                                                    {
                                                        <span class="badge bg-secondary me-1">@userRole.Role?.RoleName</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No roles assigned</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> This menu is not assigned to any users yet. Use the "Assign Menus to Roles" action to assign it.
                        </div>
                    }
                </div>
            </div>

            <!-- Roles with Access Summary -->
            @{
                var rolesWithAccess = Model.UserMenus
                    .SelectMany(um => um.User?.UserRoles ?? new List<UserRole>())
                    .Select(ur => ur.Role?.RoleName)
                    .Where(r => !string.IsNullOrWhiteSpace(r))
                    .Distinct()
                    .OrderBy(r => r)
                    .ToList();
            }

            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-shields"></i> Roles with Access</h5>
                </div>
                <div class="card-body">
                    @if (rolesWithAccess.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var role in rolesWithAccess)
                            {
                                <span class="badge bg-warning text-dark p-2">
                                    <i class="bi bi-person-badge"></i> @role
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No roles have access to this menu yet.</p>
                    }
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex gap-2 flex-wrap">
                <a asp-action="EditMenu" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit Menu
                </a>
                <a asp-action="DeleteMenu" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Menu
                </a>
                <a asp-action="AssignMenus" class="btn btn-success">
                    <i class="bi bi-link-45deg"></i> Manage Assignments
                </a>
                <a asp-action="Menus" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Menus
                </a>
            </div>
        </div>

        <!-- Quick Info Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow-sm bg-light border-0">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-lightbulb"></i> Quick Info</h5>
                    <ul class="list-unstyled small">
                        <li class="mb-2">
                            <strong>Total Users:</strong> @Model.UserMenus.Count
                        </li>
                        <li class="mb-2">
                            <strong>Total Roles:</strong> @rolesWithAccess.Count()
                        </li>
                        <li class="mb-2">
                            <strong>Menu Type:</strong> <span class="badge bg-primary">Navigation</span>
                        </li>
                    </ul>
                    <hr />
                    <p class="small text-muted mb-0">
                        <i class="bi bi-info-circle"></i> This menu is available to users based on their role assignments. Use the "Manage Assignments" action to configure which roles can access this menu.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 8px;
        }

        .card-header {
            border-radius: 8px 8px 0 0;
            border-bottom: 2px solid rgba(0,0,0,.125);
        }

        .table-responsive {
            border-radius: 0 0 8px 8px;
        }

        .badge {
            font-weight: 500;
            padding: 6px 12px;
        }

        code {
            font-size: 0.9em;
        }
    </style>
}
