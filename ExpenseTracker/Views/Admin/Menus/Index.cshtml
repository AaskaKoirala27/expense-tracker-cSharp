@model IEnumerable<ExpenseTracker.Models.Menu>
@{
    ViewData["Title"] = "Manage Menus";
}

<div class="container mt-5">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1><i class="bi bi-menu-button-wide"></i> Manage Menus</h1>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-action="CreateMenu" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Menu
                </a>
                <a asp-action="AssignMenus" class="btn btn-success">
                    <i class="bi bi-link-45deg"></i> Assign to Roles
                </a>
            </div>
        </div>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>URL</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var menu in Model)
                    {
                        <tr>
                            <td>
                                <strong>@menu.Title</strong>
                            </td>
                            <td>
                                <code class="bg-light p-2 rounded">@menu.Url</code>
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="DetailsMenu" asp-route-id="@menu.Id" class="btn btn-info" title="View Details">
                                        <i class="bi bi-eye"></i> <span class="d-none d-md-inline">Details</span>
                                    </a>
                                    <a asp-action="EditMenu" asp-route-id="@menu.Id" class="btn btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i> <span class="d-none d-md-inline">Edit</span>
                                    </a>
                                    <a asp-action="DeleteMenu" asp-route-id="@menu.Id" class="btn btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i> <span class="d-none d-md-inline">Delete</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading"><i class="bi bi-info-circle"></i> No Menus Found</h4>
            <p>No menus exist yet. Click the button above to add your first menu.</p>
        </div>
    }
</div>
