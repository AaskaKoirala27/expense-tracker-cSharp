@model ExpenseTracker.Models.User
@{
    ViewData["Title"] = "Create Admin";
}

<div class="container mt-5">
    <h1><i class="bi bi-shield-plus"></i> Create Admin</h1>
    <div class="alert alert-info" role="alert">
        <strong>Superadmin only:</strong> This creates a user account with the Admin role.
    </div>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="CreateAdmin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="E.g., admin.jane" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PasswordHash" class="form-label">Password</label>
                    <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Strong password" required />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    <small class="form-text text-muted">Use a strong password (8+ characters recommended).</small>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Admin
                    </button>
                    <a asp-action="Users" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
