@model ExpenseTracker.Models.User
@{
    ViewData["Title"] = "Delete User";
    var isSuperAdminUser = Model.Username == "superadmin";
    var isSuperAdmin = User.Identity?.Name == "superadmin";
}

<div class="container mt-5">
    <h1>Delete User</h1>
    <hr />

    @if (isSuperAdminUser && !isSuperAdmin)
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Cannot Delete Superadmin</h4>
            <p>Only the superadmin account holder can manage the superadmin account. Regular administrators cannot delete the superadmin account as a security measure.</p>
            <a asp-action="Users" class="btn btn-secondary mt-2">
                <i class="bi bi-arrow-left"></i> Back to Users
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Confirm Deletion</h4>
            <p>Are you sure you want to delete this user?
            @if (isSuperAdminUser)
            {
                <strong>This action cannot be undone and will remove the superadmin account.</strong>
            }
            else
            {
                <text>This action cannot be undone.</text>
            }
            </p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <p><strong>Username:</strong> @Model.Username</p>
                        @if (isSuperAdminUser)
                        {
                            <p><span class="badge bg-danger">SUPERADMIN</span></p>
                        }
                    </div>
                </div>

                <form asp-action="DeleteUser" method="post" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete User
                    </button>
                    <a asp-action="Users" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </form>
            </div>
        </div>
    }
</div>
