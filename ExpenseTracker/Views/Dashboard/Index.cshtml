@model ExpenseTracker.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid mt-5">
    <h1><i class="bi bi-speedometer2"></i> Dashboard</h1>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="card-title text-muted">@(isAdmin ? "Total Expenses" : "Your Expenses")</h6>
                    <p class="display-5 mb-0">@Model.TotalExpenses</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h6 class="card-title text-muted">@(isAdmin ? "Total Amount" : "Total Spent")</h6>
                    <p class="display-5 mb-0">@($"NPR {Model.TotalAmount:N2}")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card shadow-sm border-0 w-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h6 class="card-title text-muted">Expenses</h6>
                        <p class="text-muted mb-3">Review and manage your expense history.</p>
                    </div>
                    <a asp-controller="Expense" asp-action="Index" class="btn btn-primary btn-sm">
                        <i class="bi bi-eye"></i> View All Expenses
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Category Breakdown</h5>
                </div>
                <div class="card-body">
                    @if (Model.Categories.Count == 0)
                    {
                        <p class="text-muted mb-0">No expenses to summarize.</p>
                    }
                    else
                    {
                        <canvas id="categoryChart" style="max-height: 300px; margin-bottom: 20px;"></canvas>
                        <div class="table-responsive">
                            <table class="table table-sm align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th class="text-end">Count</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <tr>
                                            <td><strong>@category.Category</strong></td>
                                            <td class="text-end">@category.Count</td>
                                            <td class="text-end text-success fw-bold">@($"NPR {category.TotalAmount:N2}")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent @(isAdmin ? "System" : "Your") Expenses</h5>
                </div>
                <div class="card-body">
                    @if (!isAdmin && Model.RecentExpenses.Count == 0 || isAdmin && Model.AdminRecentExpenses.Count == 0)
                    {
                        <p class="text-muted mb-0">No recent expenses.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm align-middle mb-3">
                                <thead>
                                    <tr>
                                        @if (isAdmin)
                                        {
                                            <th>User</th>
                                        }
                                        <th>Date</th>
                                        <th>Description</th>
                                        <th>Category</th>
                                        <th class="text-end">Amount</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (isAdmin)
                                    {
                                        @foreach (var expense in Model.AdminRecentExpenses)
                                        {
                                            var rowTarget = Url.Action("Edit", "Expense", new { id = expense.Id });
                                            <tr class="clickable-row" data-href="@rowTarget">
                                                <td>
                                                    <strong>@expense.Username</strong>
                                                    @if (expense.IsSuperAdmin)
                                                    {
                                                        <span class="badge bg-danger ms-1">Superadmin</span>
                                                    }
                                                    else if (expense.IsAdmin)
                                                    {
                                                        <span class="badge bg-warning text-dark ms-1">Admin</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary ms-1">Regular</span>
                                                    }
                                                </td>
                                                <td><small class="text-muted">@expense.Date.ToString("MMM dd, yyyy")</small></td>
                                                <td>
                                                    <a href="@Url.Action("Details", "Expense", new { id = expense.Id })">
                                                        @expense.Description
                                                    </a>
                                                </td>
                                                <td><span class="badge bg-info">@expense.Category</span></td>
                                                <td class="text-end">@($"NPR {expense.Amount:N2}")</td>
                                                <td class="text-center">
                                                    <a href="@Url.Action("Edit", "Expense", new { id = expense.Id })" class="btn btn-sm btn-warning">Edit</a>
                                                    <a href="@Url.Action("Delete", "Expense", new { id = expense.Id })" class="btn btn-sm btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        @foreach (var expense in Model.RecentExpenses)
                                        {
                                            var rowTarget = Url.Action("Details", "Expense", new { id = expense.Id });
                                            <tr class="clickable-row" data-href="@rowTarget">
                                                <td><small class="text-muted">@expense.Date.ToString("MMM dd, yyyy")</small></td>
                                                <td>
                                                    <a href="@Url.Action("Details", "Expense", new { id = expense.Id })">
                                                        @expense.Description
                                                    </a>
                                                </td>
                                                <td><span class="badge bg-info">@expense.Category</span></td>
                                                <td class="text-end">@($"NPR {expense.Amount:N2}")</td>
                                                <td class="text-center">
                                                    <a href="@Url.Action("Details", "Expense", new { id = expense.Id })" class="btn btn-sm btn-info">Details</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a asp-controller="Expense" asp-action="Index" class="btn btn-primary btn-sm">
                            <i class="bi bi-chevron-right"></i> View All
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (isAdmin && Model.UserExpenses.Any())
    {
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="alert alert-primary border-start border-5" role="alert">
                    <i class="bi bi-shield-check"></i> <strong>Admin View:</strong> System-wide analytics.
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Expenses by User</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="userChart" style="max-height: 300px; margin-bottom: 20px;"></canvas>
                        <div class="table-responsive">
                            <table class="table table-sm align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th class="text-end">Count</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.UserExpenses.OrderByDescending(u => u.TotalAmount))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@user.Username</strong>
                                                @if (user.IsSuperAdmin)
                                                {
                                                    <span class="badge bg-danger ms-1">Superadmin</span>
                                                }
                                                else if (user.IsAdmin)
                                                {
                                                    <span class="badge bg-warning text-dark ms-1">Admin</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary ms-1">Regular</span>
                                                }
                                            </td>
                                            <td class="text-end">@user.TotalExpenses</td>
                                            <td class="text-end text-success fw-bold">@($"NPR {user.TotalAmount:N2}")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-calculator"></i> System Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 border-end">
                                <p class="text-muted mb-1">Total Users</p>
                                <h4 class="mb-0">@Model.UserExpenses.Count</h4>
                            </div>
                            <div class="col-md-4 border-end">
                                <p class="text-muted mb-1">Avg per User</p>
                                <h4 class="mb-0">@(Model.UserExpenses.Count > 0 ? $"NPR {(Model.TotalAmount / Model.UserExpenses.Count):N2}" : "NPR 0.00")</h4>
                            </div>
                            <div class="col-md-4">
                                <p class="text-muted mb-1">Avg per Expense</p>
                                <h4 class="mb-0">@(Model.TotalExpenses > 0 ? $"NPR {(Model.TotalAmount / Model.TotalExpenses):N2}" : "NPR 0.00")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (Model.Categories.Count > 0)
        {
            <text>
            const categoryCtx = document.getElementById('categoryChart').getContext('2d');
            const categoryChart = new Chart(categoryCtx, {
                type: 'doughnut',
                data: {
                    labels: [@string.Join(", ", Model.Categories.Select(c => $"'{c.Category}'"))],
                    datasets: [{
                        label: 'Amount by Category',
                        data: [@string.Join(", ", Model.Categories.Select(c => c.TotalAmount))],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 206, 86, 0.8)',
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(153, 102, 255, 0.8)',
                            'rgba(255, 159, 64, 0.8)',
                            'rgba(199, 199, 199, 0.8)',
                            'rgba(83, 102, 255, 0.8)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            </text>
        }

        @if (isAdmin && Model.UserExpenses.Count > 0)
        {
            <text>
            const userCtx = document.getElementById('userChart').getContext('2d');
            const userChart = new Chart(userCtx, {
                type: 'bar',
                data: {
                    labels: [@string.Join(", ", Model.UserExpenses.OrderByDescending(u => u.TotalAmount).Select(u => $"'{u.Username}'"))],
                    datasets: [{
                        label: 'Total Amount by User',
                        data: [@string.Join(", ", Model.UserExpenses.OrderByDescending(u => u.TotalAmount).Select(u => u.TotalAmount))],
                        backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    indexAxis: 'y',
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true
                        }
                    }
                }
            });
            </text>
        }

        document.querySelectorAll('.clickable-row').forEach(row => {
            row.addEventListener('click', (event) => {
                const isInteractive = event.target.closest('a, button');
                if (isInteractive) {
                    return;
                }

                const target = row.getAttribute('data-href');
                if (target) {
                    window.location.href = target;
                }
            });
        });
    </script>
}

@section Styles {
    <style>
        h1 {
            color: #2c3e50;
            font-weight: 600;
            border-bottom: 3px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 30px;
        }

        .card {
            border-radius: 8px;
        }

        .card-header {
            border-radius: 8px 8px 0 0;
            border-bottom: 2px solid rgba(0,0,0,.125);
        }

        .display-5 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #007bff;
        }

        .badge {
            padding: 6px 12px;
            font-weight: 500;
        }

        .alert-primary {
            background-color: #e7f3ff;
            color: #004085;
        }

        .border-start {
            border-left: 4px solid #007bff !important;
        }

        .clickable-row {
            cursor: pointer;
        }
    </style>
}
