@model ExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Expense Details";
}

<div class="container mt-5">
    <h1>Expense Details</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="card-title">Description</h5>
                            <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="card-title">Category</h5>
                            <p class="card-text">
                                <span class="badge bg-info">@Html.DisplayFor(model => model.Category)</span>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="card-title">Amount</h5>
                            <p class="card-text">
                                <strong style="font-size: 1.5rem; color: #28a745;">
                                    @Html.DisplayFor(model => model.Amount, "{0:C}")
                                </strong>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="card-title">Date</h5>
                            <p class="card-text">@Html.DisplayFor(model => model.Date, "{0:MMMM dd, yyyy}")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <h5 class="card-title">Notes</h5>
                            <p class="card-text">@Html.DisplayFor(model => model.Notes)</p>
                        </div>
                    }

                    <div class="mb-3">
                        <h5 class="card-title">Created</h5>
                        <p class="card-text">@Html.DisplayFor(model => model.CreatedAt, "{0:MMMM dd, yyyy - HH:mm:ss}")</p>
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        h1 {
            color: #2c3e50;
            margin-bottom: 20px;
        }
        
        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        
        .card-title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 10px;
        }
        
        .btn {
            border-radius: 6px;
            margin-right: 5px;
        }
    </style>
}
