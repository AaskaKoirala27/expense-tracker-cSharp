            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        h1 {
            color: #2c3e50;
            margin-bottom: 20px;
        }
        
        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        
        .card-title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 10px;
        }
        
        .btn {
            border-radius: 6px;
            margin-right: 5px;
        }
    </style>
