@model ExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Expense Details";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10">
            <h1><i class="bi bi-receipt"></i> Expense Details</h1>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Admin-only: Show who owns this expense -->
                    @if (isAdmin && Model.User != null)
                    {
                        <div class="alert alert-info mb-4">
                            <strong>Owner:</strong> @Model.User.Username
                        </div>
                    }

                    <!-- Main Details -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted mb-2"><i class="bi bi-pencil-square"></i> Description</h6>
                            <p class="h5">@Html.DisplayFor(model => model.Description)</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted mb-2"><i class="bi bi-tags"></i> Category</h6>
                            <p>
                                <span class="badge bg-info fs-6">@Html.DisplayFor(model => model.Category)</span>
                            </p>
                        </div>
                    </div>

                    <!-- Amount and Date -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted mb-2"><i class="bi bi-cash-coin"></i> Amount</h6>
                                <p class="h4" style="color: #28a745; font-weight: 600;">
                                    @($"NPR {Model.Amount:N2}")
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted mb-2"><i class="bi bi-calendar-event"></i> Date</h6>
                            <p class="h5">@Html.DisplayFor(model => model.Date, "{0:MMMM dd, yyyy}")</p>
                        </div>
                    </div>

                    <!-- Notes -->
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-4">
                            <h6 class="text-muted mb-2"><i class="bi bi-chat-dots"></i> Notes</h6>
                            <p class="card-text bg-light p-3 rounded">@Html.DisplayFor(model => model.Notes)</p>
                        </div>
                    }

                    <!-- Timestamps -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-2"><i class="bi bi-clock-history"></i> Created At</h6>
                            <p class="small">@Html.DisplayFor(model => model.CreatedAt, "{0:MMMM dd, yyyy - HH:mm:ss}")</p>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-4 d-flex gap-2">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    h1 {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .card {
        border: none;
        border-radius: 8px;
    }

    .btn {
        border-radius: 6px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    h6 {
        font-weight: 600;
        letter-spacing: 0.5px;
    }
</style>

