@model ExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Edit Expense";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10">
            <h1><i class="bi bi-pencil-square"></i> Edit Expense</h1>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> <strong>Error!</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(x => x.Errors.Any()))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Validation Errors</h5>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <!-- Admin Info -->
                        @if (isAdmin && Model.User != null)
                        {
                            <div class="alert alert-info mb-4">
                                <strong>Owner:</strong> @Model.User.Username
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-pencil-square"></i> Description
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Description" 
                                   class="form-control @(ViewData.ModelState.ContainsKey("Description") && (ViewData.ModelState["Description"]?.Errors.Count ?? 0) > 0 ? "is-invalid" : "")" 
                                   placeholder="E.g., Grocery shopping" 
                                   required />
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <small class="form-text text-muted">Max 100 characters</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">
                                <i class="bi bi-cash-coin"></i> Amount
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">NPR</span>
                                <input asp-for="Amount" 
                                       class="form-control @(ViewData.ModelState.ContainsKey("Amount") && (ViewData.ModelState["Amount"]?.Errors.Count ?? 0) > 0 ? "is-invalid" : "")" 
                                       step="0.01"
                                       min="0.01"
                                       required />
                                <span class="input-group-text">.00</span>
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                            <small class="form-text text-muted">Must be greater than NPR 0.00</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">
                                <i class="bi bi-tags"></i> Category
                                <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Category" 
                                    class="form-select @(ViewData.ModelState.ContainsKey("Category") && (ViewData.ModelState["Category"]?.Errors.Count ?? 0) > 0 ? "is-invalid" : "")" 
                                    required>
                                <option value="">-- Select Category --</option>
                                <option value="Food">üçî Food & Dining</option>
                                <option value="Transportation">üöó Transportation</option>
                                <option value="Entertainment">üé¨ Entertainment</option>
                                <option value="Utilities">‚ö° Utilities</option>
                                <option value="Healthcare">üè• Healthcare</option>
                                <option value="Shopping">üõçÔ∏è Shopping</option>
                                <option value="Education">üìö Education</option>
                                <option value="Other">üìå Other</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label">
                                <i class="bi bi-calendar-event"></i> Date
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Date" 
                                   type="date" 
                                   class="form-control @(ViewData.ModelState.ContainsKey("Date") && (ViewData.ModelState["Date"]?.Errors.Count ?? 0) > 0 ? "is-invalid" : "")" 
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")"
                                   required />
                            <span asp-validation-for="Date" class="text-danger small"></span>
                            <small class="form-text text-muted">Future dates are not allowed</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">
                                <i class="bi bi-chat-dots"></i> Notes <span class="text-muted">(Optional)</span>
                            </label>
                            <textarea asp-for="Notes" 
                                      class="form-control" 
                                      rows="4"
                                      placeholder="Add any additional notes..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                            <small class="form-text text-muted">Max 500 characters</small>
                        </div>

                        <div class="mb-3 d-grid gap-2 d-md-flex">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Update Expense
                            </button>
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (() => {
            'use strict';
            const form = document.querySelector('.needs-validation');
            form?.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
    <style>
        h1 {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        .text-danger {
            color: #dc3545;
            font-weight: 600;
        }

        .form-control, .form-select {
            border-radius: 6px;
            border: 1px solid #ddd;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .form-control:focus, .form-select:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn {
            border-radius: 6px;
            font-weight: 500;
            transition: all 0.3s;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #ddd;
        }

        .card {
            border: none;
            border-radius: 8px;
        }
    </style>
}
